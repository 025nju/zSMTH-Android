<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerview_item_bg"
    android:paddingBottom="2dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="2dp">

    <TextView
        android:id="@+id/category_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/recycler_view_seperator"
        android:paddingLeft="4dp"
        android:text="Category"
        android:textColor="@color/status_text_night"
        android:textSize="16dp"/>

    <LinearLayout
        android:id="@+id/topic_title_row"
        android:layout_below="@+id/category_name"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/topic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="8dp"
            android:text="Topic"
            android:textColor="@color/status_text_night"
            android:textSize="19dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/topic_author_row"
        android:layout_below="@+id/topic_title_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topic_publish_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/topic_author"
            android:gravity="left"
            android:paddingLeft="2dp"
            android:text="@string/publish_date_label"
            android:textColor="@color/colorSecondaryText"/>

        <TextView
            android:id="@+id/topic_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/topic_publish_label"
            android:gravity="left"
            android:paddingLeft="2dp"
            android:text="作者"
            android:textColor="@color/blue_text_night"/>

        <TextView
            android:id="@+id/topic_public_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:paddingRight="8dp"
            android:text="2016-03-24"
            android:textAlignment="textEnd"
            android:textColor="@color/colorSecondaryText"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topic_replier_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topic_author_row"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/topic_reply_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/topic_replier"
            android:gravity="left"
            android:paddingLeft="2dp"
            android:text="@string/reply_date_label"
            android:textColor="@color/colorSecondaryText"
            />

        <TextView
            android:id="@+id/topic_replier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_toRightOf="@+id/topic_reply_label"
            android:gravity="left"
            android:paddingLeft="2dp"
            android:text="回复者"
            android:textColor="@color/blue_text_night"/>


        <TextView
            android:id="@+id/topic_reply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingRight="8dp"
            android:text="2016-03-24"
            android:textAlignment="textEnd"
            android:textColor="@color/colorSecondaryText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topic_status_row"
        android:layout_below="@+id/topic_replier_row"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Like: +15, 分数： -15; 回帖数: 129"
            android:textColor="@color/colorSecondaryText"
            android:id="@+id/topic_status_summary"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/topic_status_attach"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_attach_file_white_18dp"/>
    </LinearLayout>


</RelativeLayout>